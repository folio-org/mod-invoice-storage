{
  "id": "${artifactId}-${version}",
  "name": "Invoice CRUD module",
  "provides": [
    {
      "id": "invoice-storage.invoice",
      "version": "1.0",
      "handlers": [
        {
          "methods": ["GET"],
          "pathPattern": "/invoice-storage/invoices",
          "permissionsRequired": ["invoice.collection.get"]
        },
        {
          "methods": ["POST"],
          "pathPattern": "/invoice-storage/invoices",
          "permissionsRequired": ["invoice.item.post"]
        },
        {
          "methods": ["GET"],
          "pathPattern": "/invoice-storage/invoices/{id}",
          "permissionsRequired": ["invoice.item.get"]
        },
        {
          "methods": ["PUT"],
          "pathPattern": "/invoice-storage/invoices/{id}",
          "permissionsRequired": ["invoice.item.put"]
        },
        {
          "methods": ["DELETE"],
          "pathPattern": "/invoice-storage/invoices/{id}",
          "permissionsRequired": ["invoice.item.delete"]
        }
      ]
    },
    {
      "id": "invoice-storage.invoice-line",
      "version": "1.0",
      "handlers": [
        {
          "methods": ["GET"],
          "pathPattern": "/invoice-storage/invoice-lines",
          "permissionsRequired": ["invoice-lines.collection.get"]
        },
        {
          "methods": ["POST"],
          "pathPattern": "/invoice-storage/invoice-lines",
          "permissionsRequired": ["invoice-lines.item.post"]
        },
        {
          "methods": ["GET"],
          "pathPattern": "/invoice-storage/invoice-lines/{id}",
          "permissionsRequired": ["invoice-lines.item.get"]
        },
        {
          "methods": ["PUT"],
          "pathPattern": "/invoice-storage/invoice-lines/{id}",
          "permissionsRequired": ["invoice-lines.item.put"]
        },
        {
          "methods": ["DELETE"],
          "pathPattern": "/invoice-storage/invoice-lines/{id}",
          "permissionsRequired": ["invoice-lines.item.delete"]
        }
      ]
    },
    {
      "id": "_tenant",
      "version": "1.0",
      "interfaceType": "system",
      "handlers": [
        {
          "methods": [ "POST", "DELETE" ],
          "pathPattern": "/_/tenant"
        }
      ]
    }
  ],
  "permissionSets": [
    {
      "permissionName": "invoice-storage.invoice.collection.get",
      "displayName": "Invoice storage - get invoice collection",
      "description": "Get invoice collection"
    },
    {
      "permissionName": "invoice-storage.invoice.item.get",
      "displayName": "Invoice storage - get individual invoice",
      "description": "Get individual invoice"
    },
    {
      "permissionName": "invoice-storage.invoice.item.post",
      "displayName": "Invoice storage - create invoice",
      "description": "Create invoice"
    },
    {
      "permissionName": "invoice-storage.invoice.item.put",
      "displayName": "Invoice storage - modify invoice",
      "description": "Modify invoice"
    },
    {
      "permissionName": "invoice-storage.invoice.item.delete",
      "displayName": "Invoice storage - delete invoice",
      "description": "Delete invoice"
    },
    {
      "permissionName": "invoice-storage.invoice-line.collection.get",
      "displayName": "Invoice storage - get invoice line collection",
      "description": "Get invoice line collection"
    },
    {
      "permissionName": "invoice-storage.invoice-line.item.get",
      "displayName": "Invoice storage - get individual invoice line",
      "description": "Get individual invoice line"
    },
    {
      "permissionName": "invoice-storage.invoice-line.item.post",
      "displayName": "Invoice storage - create invoice line",
      "description": "Create invoice line"
    },
    {
      "permissionName": "invoice-storage.invoice-line.item.put",
      "displayName": "Invoice storage - modify invoice line",
      "description": "Modify invoice line"
    },
    {
      "permissionName": "invoice-storage.invoice-line.item.delete",
      "displayName": "Invoice storage - delete invoice line",
      "description": "Delete invoice line"
    },
    {
      "permissionName": "invoice-storage.module.all",
      "displayName": "Invoice storage module - all permissions",
      "description": "Entire set of permissions needed to use the invoice module",
      "subPermissions": [
        "invoice-storage.invoice.collection.get",
        "invoice-storage.invoice.item.get",
        "invoice-storage.invoice.item.post",
        "invoice-storage.invoice.item.put",
        "invoice-storage.invoice.item.delete",
        "invoice-storage.invoice-line.collection.get",
        "invoice-storage.invoice-line.item.get",
        "invoice-storage.invoice-line.item.post",
        "invoice-storage.invoice-line.item.put",
        "invoice-storage.invoice-line.item.delete"
      ],
      "visible": false
    }
  ],
  "launchDescriptor": {
    "dockerImage": "${artifactId}:${version}",
    "dockerArgs": {
      "HostConfig": { "PortBindings": { "8081/tcp":  [{ "HostPort": "%p" }] } }
    },
    "dockerPull" : false
  }
}
